<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
      <h1> Pay To Place Order</h1>
      <hr>
      <h4>Your Total: <strong>${{ total }}</strong></h4>
      <h4>Quantity: <strong>{{ qty }}</strong></h4>
      <hr>
    <form id="checkout-form" action="/checkout" method="post">
      <div class="row">

        <div class="row-xs-12">
          <div class="form-group">
            <label for="name">Name</label><br/>
            <input type="text" id="name" class="form-control" required>
          </div>
        </div>

        <div class="row-xs-12">
          <div class="form-group">
            <label for="address">Address</label><br/>
            <input type="text" id="address" class="form-control" required>
          </div>
        </div>

        <div class="row-xs-12">
          <div class="form-group">
            <label for="cardnumber">Card Number</label><br/>
            <input type="text" id="card-number" class="form-control" required>
          </div>
        </div>

        <div class="row-xs-12">
          <div class="form-group">
            <label for="holdername">Card Holder's Name </label><br/>
            <input type="text" id="card-name" class="form-control" required>
          </div>
        </div>

        <div class="row-xs-12">
          <div class="form-group">
            <label for="cvv">CVV</label><br/>
            <input type="text" id="card-cvv" class="form-control" required>
          </div>
        </div>

        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <label for="card-expiry-month">Expiration Month</label>
                <input type="text" id="card-expiry-month" class="form-control" required>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <label for="card-expiry-year">Expiration Year</label>
                <input type="text" id="card-expiry-year" class="form-control" required>
              </div>
            </div>
          </div>
        </div>




    </div>
      <a href="/" class="btn btn-success center-block payment" type="button">Pay</a>
    </form>
  </div>
</div>
